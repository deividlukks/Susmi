# ===================================================================
# Susmi Frontend - Vercel Environment Variables
# ===================================================================
# Configure estas variáveis no Vercel Dashboard:
# Settings > Environment Variables
#
# IMPORTANTE: Use "Production" environment para variáveis de produção

# -------------------------------------------------------------------
# API Backend (Railway)
# -------------------------------------------------------------------
# Substitua pela URL real do seu deploy no Railway
# Exemplo: https://susmi-api-production.up.railway.app/api
NEXT_PUBLIC_API_URL=https://your-backend.up.railway.app/api

# -------------------------------------------------------------------
# APP INFO
# -------------------------------------------------------------------
NEXT_PUBLIC_APP_NAME=Susmi
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Sistema Unificado de Serviços Multimodais Inteligentes

# -------------------------------------------------------------------
# SUPABASE (Autenticação e Storage)
# -------------------------------------------------------------------
# Obtenha em: Supabase Dashboard > Project Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-public-key-here

# -------------------------------------------------------------------
# FEATURES FLAGS (Opcional)
# -------------------------------------------------------------------
# Controle quais features estão habilitadas
NEXT_PUBLIC_ENABLE_TASKS=true
NEXT_PUBLIC_ENABLE_FINANCE=true
NEXT_PUBLIC_ENABLE_HEALTH=true
NEXT_PUBLIC_ENABLE_HOME_AUTOMATION=true
NEXT_PUBLIC_ENABLE_CALENDAR=true
NEXT_PUBLIC_ENABLE_KNOWLEDGE=true
NEXT_PUBLIC_ENABLE_AGENTS=true
NEXT_PUBLIC_ENABLE_VOICE=false

# -------------------------------------------------------------------
# ANALYTICS (Opcional)
# -------------------------------------------------------------------
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Vercel Analytics (automático se habilitado no dashboard)
# Não precisa configurar variável

# -------------------------------------------------------------------
# EXTERNAL SERVICES (Opcional)
# -------------------------------------------------------------------
# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=

# Posthog (Product Analytics)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# -------------------------------------------------------------------
# MAP SERVICES (Opcional)
# -------------------------------------------------------------------
# Para features de mapa/localização
NEXT_PUBLIC_MAPBOX_TOKEN=
NEXT_PUBLIC_GOOGLE_MAPS_KEY=

# -------------------------------------------------------------------
# ENVIRONMENT
# -------------------------------------------------------------------
NODE_ENV=production

# -------------------------------------------------------------------
# NOTA: Variáveis com prefixo NEXT_PUBLIC_ são expostas ao browser
# Não coloque secrets aqui! Use apenas para URLs públicas e configs cliente
# -------------------------------------------------------------------
